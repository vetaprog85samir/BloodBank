<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/post_details_fragment_iv_"
            style="@style/margin_padding_Style"
            android:layout_width="wrap_content"
            android:layout_height="300dp"/>
        <TextView
            android:id="@+id/post_details_fragment_tv_title"
            style="@style/editTextStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_40dp"
            android:drawableEnd="@drawable/favorite_select"/>
        <TextView
            android:id="@+id/post_details_fragment_tv_desc"
            style="@style/editTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>