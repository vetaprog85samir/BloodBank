<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_t_shape"
    android:layout_marginTop="@dimen/dimens_m" >

    <LinearLayout
        android:id="@+id/item_linear_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/post_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimens_m"
            android:layout_marginStart="@dimen/dimens_ll"
            android:layout_marginEnd="@dimen/dimens_ll"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:background="@drawable/favorite_select" />
        <TextView

            android:layout_marginStart="@dimen/dimens_ll"
            android:layout_marginEnd="@dimen/dimens_ll"
            android:id="@+id/post_tv_fragment"
            android:layout_width="250dp"
            android:layout_height="@dimen/dimens_50dp"
            android:gravity="center"/>
    </LinearLayout>
    <ImageView
        android:layout_below="@+id/item_linear_id"
        android:id="@+id/post_iv_fragment"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        />


</RelativeLayout>