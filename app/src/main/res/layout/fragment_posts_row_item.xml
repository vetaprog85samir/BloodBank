<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_185sdp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fragment_posts_row_item_iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_179sdp"
        app:srcCompat="@drawable/ic_post_img" />

    <TextView
        android:id="@+id/fragment_posts_row_item_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignStart="@id/fragment_posts_row_item_iv"
        android:layout_alignEnd="@id/fragment_posts_row_item_iv"
        android:layout_alignBottom="@id/fragment_posts_row_item_iv"
        android:background="@drawable/round_background"
        android:textColor="#fff"
        android:textSize="@dimen/_16ssp"
        android:gravity="center"
        android:layout_margin="@dimen/_7sdp"/>
</RelativeLayout>